@model MVCPracticaArqdSoft.Models.ContactModel;
@{
    ViewData["Title"] = "DeleteContact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card col-6 mx-auto">
    <h1 class="card-header">Eliminar contacto</h1>
    <div class="card-body">
        <div class="alert alert-danger">Estas seguro de querer eliminar a @Html.DisplayTextFor(m => m.Name)</div>
    </div>
    <form method="post" asp-controller="Contact" asp-action="DeleteContact" class="card-footer d-flex flex-row-reverse">
        <input type="hidden" value="@Model.Id" asp-for="Id"/>
        <button class="btn btn-outline-danger">Confirmar eliminación</button>
    </form>
</div>

